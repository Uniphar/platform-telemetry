<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <!-- START OpenTelemetry-->
    <!--for aspnet core api, to filter /health, AddAspNetCoreInstrumentation-->
    <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="*" />
    <!--for http traffic, AddHttpClientInstrumentation-->
    <PackageReference Include="OpenTelemetry.Instrumentation.Http" Version="*" />
    <!--for the runtime itself , AddRuntimeInstrumentation-->
    <PackageReference Include="OpenTelemetry.Instrumentation.Runtime" Version="*" />
    <!--to sent it to app insights-->
    <PackageReference Include="Azure.Monitor.OpenTelemetry.Exporter" Version="*" />
    <!--local debug, to sent it to console-->
    <PackageReference Include="OpenTelemetry.Exporter.Console" Version="*" />
    <!--azure app insight-->
    <PackageReference Include="Azure.Monitor.OpenTelemetry.AspNetCore" Version="*" />
    <!--AddContainerDetector-->
    <packageReference Include="OpenTelemetry.Resources.Container" Version="*-*" />
    <!-- AddHostDetector-->
    <PackageReference Include="OpenTelemetry.Resources.Host" Version="*-*" />
    <!-- END OpenTelemetry-->
  </ItemGroup>
</Project>